{
  "name": "minecraft-skin-renderer",
  "version": "0.1.0",
  "private": true,
  "description": "A browser-based Minecraft skin renderer with WebGL and WebGPU support",
  "keywords": [
    "3d",
    "canvas",
    "minecraft",
    "renderer",
    "skin",
    "webgl",
    "webgpu"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/minecraft-skin-renderer"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "dev:playground": "vite playground",
    "build:playground": "vite build playground",
    "preview:playground": "vite preview playground",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint --type-aware --type-check",
    "lint:fix": "oxlint --type-aware --type-check --fix",
    "postinstall": "git-hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@playwright/test": "^1.52.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "@webgpu/types": "^0.1.69",
    "bun-git-hooks": "^0.3.1",
    "happy-dom": "^20.4.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "^0.11.3",
    "playwright": "^1.52.0",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.4",
    "vitest-webgl-canvas-mock": "^1.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,vue}": "bun run lint"
  }
}
