{
  "name": "@daidr/minecraft-skin-renderer",
  "version": "0.2.0",
  "private": false,
  "description": "A zero-dependency Minecraft skin renderer with WebGL and WebGPU support",
  "keywords": [
    "3d",
    "canvas",
    "minecraft",
    "renderer",
    "skin",
    "webgl",
    "webgpu"
  ],
  "homepage": "https://mcskin.daidr.me",
  "bugs": {
    "url": "https://github.com/daidr/minecraft-skin-renderer/issues"
  },
  "license": "MIT",
  "author": "Dai Xuezhou <i@daidr.me>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daidr/minecraft-skin-renderer.git"
  },
  "workspaces": [
    "playground",
    "native-playground",
    "docs"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.js",
    "./canvas2d": "./dist/canvas2d.js",
    "./panorama": "./dist/panorama.js",
    "./webgl": "./dist/webgl.js",
    "./webgpu": "./dist/webgpu.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "dev:playground": "bun run --cwd playground dev",
    "build:playground": "bun run --cwd playground build",
    "preview:playground": "bun run --cwd playground preview",
    "docs:dev": "bun run --cwd docs dev",
    "docs:build": "bun run --cwd docs build",
    "docs:preview": "bun run --cwd docs preview",
    "build:deploy": "bun run docs:build && bun run build:playground && mkdir -p docs/.vitepress/dist/playground && cp -r dist-playground/* docs/.vitepress/dist/playground/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint --type-aware --type-check",
    "lint:fix": "oxlint --type-aware --type-check --fix",
    "bench:math": "bun run benchmarks/math/index.ts",
    "bench:math:vec3": "bun run benchmarks/math/vec3.bench.ts",
    "bench:math:mat4": "bun run benchmarks/math/mat4.bench.ts",
    "bench:math:quat": "bun run benchmarks/math/quat.bench.ts",
    "bench:math:utils": "bun run benchmarks/math/utils.bench.ts",
    "postinstall": "git-hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "@webgpu/types": "^0.1.69",
    "bun-git-hooks": "^0.3.1",
    "happy-dom": "^20.5.1",
    "lint-staged": "^16.2.7",
    "mitata": "^1.0.34",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "oxlint-tsgolint": "^0.11.5",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vitest-webgl-canvas-mock": "^1.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,vue}": "bun run lint"
  }
}
